@import url('https://fonts.googleapis.com/css?family=Nunito:400,600,800')

lightGrey = #f1f1f1
grey = rgba(51, 51, 51, 0.56)
red = #e74c3c

body
  background: lightGrey
  color: grey
  cursor: inherit
  color: #333333
  font-family: 'Nunito', sans-serif
  font-size: 14px
  padding: 60px 0

main
  align-items: flex-start
  display: flex
  flex-flow: row nowrap
  justify-content: space-between
  margin: auto
  width: 922px

aside
  width: 270px

  h1
    font-size: 20px
    font-weight: normal
    margin: 0 0 8px

  p
    margin: 0 0 16px

ol
  display: flex
  flex-flow: column nowrap
  list-style: none
  margin: 0
  padding: 0
  width: 622px

  li
    align-items: center
    background: white
    border-radius: 4px
    display: flex
    flex-flow: row nowrap
    margin-bottom: 16px
    padding: 16px 32px

    img
      height: 62px
      margin-right: 21px
      object-fit: contain
      width: 62px

    .title
      flex-grow: 1

      h2
        font-size: 20px
        font-weight: 600
        margin: 0 0 4px

      p
        color: grey
        margin: 0

    button
      margin-left: 26px

button
  background: red
  border: none
  border-radius: 0 4px 4px 0
  color: white
  cursor: pointer
  font-size: 16px
  font-weight: 800
  height: 40px
  line-height: 40px
  outline: none
  padding: 0 16px
  position: relative
  text-transform: uppercase

  &::before
    background: url('./assets/btn.svg')
    content: ''
    height: 40px
    position: absolute
    right: 100%
    top: 0
    width: 10px

  &[disabled]
    background: lightGrey
    color: grey
    cursor: inherit

  &.basic
    background: none
    border: none
    color: red
    font-size: inherit
    padding: 0

    &::before
      content: none

    & + &
      margin-left: 16px

.amount
  font-size: 20px
  font-weight: 600

  .currency
    color: grey
    margin: 0 4px

  .bucks
    font-size: 32px
